<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.notes_app.NotesHomeController">
   <children>
      <BorderPane prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <top>
            <TextField fx:id="noteTitle" editable="false" BorderPane.alignment="CENTER">
               <font>
                  <Font name="Consolas Bold" size="25.0" />
               </font>
            </TextField>
         </top>
         <bottom>
            <HBox prefHeight="40.0" prefWidth="200.0" spacing="30.0" BorderPane.alignment="CENTER">
                <children>
                    <Button fx:id="btnDeleteNote" minWidth="-Infinity" mnemonicParsing="false" prefWidth="100.0" text="Delete Note">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </Button>
                    <Button fx:id="btnEditNote" minWidth="-Infinity" mnemonicParsing="false" prefWidth="100.0" text="Edit Note">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </Button>
                    <Button fx:id="btnCancelEdit" minWidth="-Infinity" mnemonicParsing="false" prefWidth="100.0" text="Cancel Edit" visible="false">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </Button>
                    <Button fx:id="btnUpdateNote" minWidth="-Infinity" mnemonicParsing="false" prefWidth="100.0" text="Update Note" visible="false">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </Button>
                </children>
            </HBox>
         </bottom>
         <center>
            <TextField fx:id="noteContent" editable="false" prefHeight="90.0" BorderPane.alignment="CENTER">
               <font>
                  <Font name="Consolas" size="18.0" />
               </font>
            </TextField>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
