<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.notes_app.ProfileSettingsController">
   <children>
            <BorderPane prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" HBox.hgrow="ALWAYS">
               <top>
                  <Label text="PROFILE" BorderPane.alignment="CENTER">
                     <font>
                        <Font name="Rockwell Extra Bold" size="40.0" />
                     </font>
                  </Label>
               </top>
               <center>
                  <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
                     <children>
                        <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@profile.png" />
                           </image>
                        </ImageView>
                        <Label fx:id="lblProfileUsername" alignment="CENTER" prefHeight="35.0" prefWidth="298.0" text="Label">
                           <font>
                              <Font size="24.0" />
                           </font>
                        </Label>
                        <Separator opacity="0.0" orientation="VERTICAL" prefHeight="200.0" />
                        <Label alignment="CENTER" prefHeight="27.0" prefWidth="304.0" text="Change Password:">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Label>
                        <PasswordField fx:id="pfChangePass" alignment="CENTER" prefHeight="36.0" prefWidth="269.0" VBox.vgrow="ALWAYS">
                           <padding>
                              <Insets left="10.0" top="10.0" />
                           </padding>
                           <font>
                              <Font size="16.0" />
                           </font>
                        </PasswordField>
                        <Separator opacity="0.0" orientation="VERTICAL" prefHeight="200.0" />
                        <Separator opacity="0.0" orientation="VERTICAL" prefHeight="200.0" />
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </VBox>
               </center>
         <bottom>
                  <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0" spacing="30.0" BorderPane.alignment="CENTER">
                     <children>
                        <Button fx:id="btnDeleteAcc" alignment="CENTER" mnemonicParsing="false" onAction="#onBtnDelAccClick" text="Delete Account">
                           <font>
                              <Font size="17.0" />
                           </font>
                        </Button>
                        <Button fx:id="btnUpdateAcc" mnemonicParsing="false" onAction="#onBtnUpdateClick" text="Update Account">
                           <font>
                              <Font size="17.0" />
                           </font>
                        </Button>
                     </children>
                  </HBox>
         </bottom>
            </BorderPane>
   </children>
</AnchorPane>
