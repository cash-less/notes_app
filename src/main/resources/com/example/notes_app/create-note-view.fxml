<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.notes_app.NewNoteController">
   <children>
        <BorderPane prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" HBox.hgrow="ALWAYS">
           <top>
              <Label alignment="CENTER" contentDisplay="CENTER" prefWidth="570.0" text="Create Note" underline="true" BorderPane.alignment="CENTER">
                 <font>
                    <Font name="Rockwell Extra Bold" size="40.0" />
                 </font>
              </Label>
           </top>
           <center>
              <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
                 <children>
                    <Label alignment="CENTER" contentDisplay="CENTER" prefWidth="570.0" text="Note Title" textAlignment="CENTER">
                       <font>
                          <Font size="19.0" />
                       </font></Label>
                    <TextField fx:id="tfNoteTitle" alignment="CENTER">
                       <font>
                          <Font name="Consolas Bold" size="30.0" />
                       </font>
                    </TextField>
                    <Label alignment="CENTER" prefWidth="570.0" text="Note Content">
                       <font>
                          <Font size="19.0" />
                       </font>
                    </Label>
                    <TextArea fx:id="taNoteContent" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                       <font>
                          <Font size="17.0" />
                       </font></TextArea>
                 </children>
              </VBox>
           </center>
           <bottom>
              <ButtonBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                <buttons>
                  <Button fx:id="btnCreateNote" mnemonicParsing="false" onAction="#onBtnCreateNote" text="Create Note">
                       <font>
                          <Font size="17.0" />
                       </font>
                    </Button>
                </buttons>
              </ButtonBar>
           </bottom>
           <padding>
              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
           </padding>
        </BorderPane>
   </children>
</AnchorPane>
